<%= form_with url: root_path, method: :get do %>
  <div class="form-group">
    <%= text_field_tag :user_id, params[:user_id], placeholder: "Enter User ID", style: "text-align: center", class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= submit_tag 'Show photos', class: "btn btn-outline-dark btn-lg btn-block" %>
  </div>
<% end %>
